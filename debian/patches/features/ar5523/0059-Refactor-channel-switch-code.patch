 	if (changed & IEEE80211_CONF_CHANGE_CHANNEL) {
 		ar5523_dbg(ar, "Do channel switch\n");
 		ar5523_flush_tx(ar);
-		error = ar5523_set_chan(ar);
-		if (error) {
-			ar5523_err(ar, "could not set chan, error %d\n", error);
-			goto out_unlock;
