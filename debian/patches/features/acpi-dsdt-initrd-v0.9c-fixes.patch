@@ -341,13 +341,8 @@ acpi_os_table_override(struct acpi_table
 #endif
 #ifdef CONFIG_ACPI_CUSTOM_DSDT_INITRD
 	if ((strncmp(existing_table->signature, "DSDT", 4) == 0) &&
-	    !acpi_no_initrd_override) {
